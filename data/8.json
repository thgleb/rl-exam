{
  "types": [
    "Все",
    "1-9: -бер-//-бир-, -пер-//-пир-",
    "10: -кос-//-кас-",
    "11: -мок-//-мак-",
    "12: -ровн-//-равн-",
    "13-15: -гор-//-гар-, -твор-//-твар-, -клон-//-клан-",
    "16: -зор-//-зар-",
    "17: -плов-//-плав-",
    "18-20: -рос-//-раст-//-ращ-, -лаг-//-лож-, -скак-//-скоч-"
  ],

  "data": [
    {
      "type": 1,
      "roots": [
        "-бер-//-бир-", "-пер-//-пир-",
        "-жег-//-жиг-", "-мер-//-мир-",
        "-тер-//-тир-", "-дер-//-дир-",
        "-чет-//-чит-", "-блест-//-блист-",
        "-стел-//-стил-"
      ],
      "rules": [
        "есть суффикс <i>а</i>, пиши в корне <b>и</b>",
        "нет суффикса <i>а</i>, пиши в корне <b>е</b>"
      ]
    },
    {
      "type": 2,
      "roots": ["-кос-//-кас"],
      "rules": [
        "есть суффикс <i>а</i>, пиши в корне <b>а</b>",
        "нет суффикса <i>а</i>, пиши в корне <b>о</b>"
      ]
    },
    {
      "type": 3,
      "roots": ["-мок-//-мак-"],
      "rules": [
        "Значение: пропускать жидкость, впитывать жидкость — <b>о</b>",
        "Значение: погружать в жидкость — <b>а</b>"
      ]
    },
    {
      "type": 4,
      "roots": ["-ровн-//-равн-"],
      "rules": [
        "Значение: ровный, гладкий — <b>о</b>",
        "Значение: равенство — <b>а</b>"
      ]
    },
    {
      "type": 5,
      "roots": ["-гор-//-гар-", "-твар-//-твор-", "-клан-//-клон-"],
      "rules": [
        "Без ударения — <b>о</b>",
        "Под ударением — <b>а</b>"
      ],
      "exceptions": [
        "пр<i>и´</i>гарь"
      ]
    },
    {
      "type": 6,
      "roots": ["-зар-//-зор-"],
      "rules": [
        "Без ударения — <b>а</b>",
        "Под ударением — <b>а</b>"
      ],
      "exceptions": [
        "зорев<i>а´</i>ть"
      ]
    },
    {
      "type": 7,
      "roots": ["-плав-//-плов-"],
      "rules": [
        "Без ударения — <b>а</b>",
        "Под ударением — <b>а</b>"
      ],
      "exceptions": [
        "пловц<i>ы´</i>",
        "плов<i>е´</i>ц",
        "пловч<i>и´</i>ха",
        "плывун<i>ы´</i>"
      ]
    },
    {
      "type": 8,
      "roots": ["-рос-//-раст-//-ращ-", "-лаг-//-лож-", "-скак-//-скоч-"],
      "rules": [
        "Если в корне согласные:",
        "",
        "с, пиши о",
        "ст или щ, то а",
        "",
        "ж, пиши о",
        "г, то а",
        "",
        "ч, пиши о",
        "к, то а"
      ],
      "exceptions": [
        "росток", "ростовщик", "Ростов", "Ростислав"
      ]
    }
  ]
}